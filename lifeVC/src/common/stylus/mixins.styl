bg-image($url)
  background-image url($url +".png")
  @media (min-device-pixel-ratio:3),(-webkit-min-device-pixel-ratio:3)
    background-image url( $url +".png")
bg-image2($url)
  background-image url($url +".jpg")
  @media (min-device-pixel-ratio:3),(-webkit-min-device-pixel-ratio:3)
    background-image url( $url +".jpg")



border-1px($color)
  position relative
  border none
  &:after
    position absolute
    bottom 0
    left 0
    content ''
    width 100%
    height 1px
    transform scaleY(0.5)
    background $color
